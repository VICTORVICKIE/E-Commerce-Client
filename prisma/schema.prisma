// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(uuid())
  phone   String  @unique
  name    String
  pin     String
  auth    String  @unique
  address String
  role    Roles   @relation(fields: [role_id], references: [id])
  role_id Int
  orders  Order[]

  @@index([phone])
}

model Roles {
  id   Int    @id @default(autoincrement())
  role String @unique
  user User[]

  @@index([role])
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  brand       String
  category    String
  price       Decimal
  description String
  image_url   String
  items       Item[]
}

model Order {
  id      Int     @id @default(autoincrement())
  user    User    @relation(fields: [user_id], references: [id])
  user_id String
  placed  Boolean @default(false)
  total   Decimal
  items   Item[]

  @@index([user_id])
}

model Item {
  id         Int     @id @default(autoincrement())
  order      Order   @relation(fields: [order_id], references: [id])
  order_id   Int
  product    Product @relation(fields: [product_id], references: [id])
  product_id Int
  quantity   Int

  @@index([order_id])
}
